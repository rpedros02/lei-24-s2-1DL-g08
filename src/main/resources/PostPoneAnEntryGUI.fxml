<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.PostPoneAnEntryGUI">
   <VBox alignment="CENTER" fillWidth="false" prefHeight="600.0" prefWidth="600.0" spacing="10"
         style="-fx-background-color: #93DB70;">
      <Label alignment="TOP_LEFT" prefHeight="24.0" prefWidth="306.0"
             style="-fx-font-weight: bold; -fx-font-size: 24; -fx-text-fill: #215E21;" text="GSM: Postpone an Entry"
             textAlignment="CENTER"/>

      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="33.0" prefWidth="314.0"
             style="-fx-font-size: 16; -fx-text-fill: #333;" text="Select Entry:" textAlignment="CENTER"/>
      <ComboBox fx:id="cmbSelectEntry" prefWidth="150.0"/>

      <Label layoutX="156.0" layoutY="348.0" style="-fx-font-size: 16; -fx-text-fill: #333;"
             text="Type the date to postpone the entry"/>
      <DatePicker fx:id="dpDate"/>

      <Button onAction="#handlePostPoneAnEntry"
              style="-fx-background-color: #215E21; -fx-text-fill: white; -fx-font-size: 16;"
              text="PostPone an Entry in the Agenda"/>
      <Button fx:id="btnBack" onAction="#handleGsm" style="-fx-background-color: rgb(153,102,51); -fx-font-size: 12;"
              text="Back" textFill="WHITE"/>
   </VBox>
</AnchorPane>
