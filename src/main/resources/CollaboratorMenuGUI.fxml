<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pt.ipp.isep.dei.esoft.project.ui.gui.CollaboratorMenuGUI">
    <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="600.0" spacing="10"
          style="-fx-background-color: #DDA0DD;">
        <Label prefHeight="247.0" prefWidth="214.0"
               style="-fx-font-weight: bold; -fx-font-size: 24; -fx-text-fill: #7B68EE;" text="Collaborator Menu"
               textAlignment="CENTER"/>
        <Button fx:id="btnConsultTheTasksAssignInTheBetweenDates"
                onAction="#handleConsultTheTasksAssignInTheBetweenDates"
                style="-fx-background-color: #808080; -fx-text-fill: white; -fx-font-size: 16;"
                text="Check Tasks Assigned"/>
        <Button fx:id="btnRecordTheCompletionOfTask" onAction="#handleRecordTheCompletionOfTask"
                style="-fx-background-color: #808080; -fx-text-fill: white; -fx-font-size: 16;"
                text="Record the completion of a task"/>
        <Button fx:id="btnMainMenu" onAction="#handleMainMenu"
                style="-fx-background-color: #7B68EE; -fx-text-fill: rgb(255,255,255); -fx-font-size: 12;"
                text="Main Menu"/>
    </VBox>
</AnchorPane>
